<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG" >
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} [%t][%c] %p: %m%n%ex}"/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>

</Configuration>
